<div class="container">
    <% @articles.each do |article| %>
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2">
          <div class="article">
            <h2><%= link_to article.title, article_path(article) %></h2>
            <p><%= article.content[0..200] %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
